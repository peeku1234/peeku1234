@Test
void testFindHoliday_IntegrationWithRowMapper_ShouldReturnCorrectlyMappedData() {
    // Arrange
    Map<String, Object> mockDatabaseResult = new HashMap<>();
    mockDatabaseResult.put("count", "2");
    mockDatabaseResult.put("date", java.sql.Date.valueOf("2024-12-25"));

    when(jdbcTemplate.queryForObject(
        eq(SQLConstants.GET_HOLIDAY_COUNT_AND_DATE),
        any(MapSqlParameterSource.class),
        any(RowMapper.class))
    ).thenAnswer(invocation -> {
        // This simulates what the actual RowMapper would do
        RowMapper<Map<String, Object>> rowMapper = invocation.getArgument(2);
        // We're not using a real ResultSet, but returning the expected mapped result
        return mockDatabaseResult;
    });

    // Act
    Map<String, Object> result = holidayMasterDAO.findHoliday(dateTime, merchantCode);

    // Assert
    assertNotNull(result);
    assertEquals("2", result.get("count"));
    assertEquals(java.sql.Date.valueOf("2024-12-25"), result.get("date"));
}
